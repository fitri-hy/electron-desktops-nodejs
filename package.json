{
  "name": "DataCentral",
  "version": "1.0.0",
  "main": "setup.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "build-css": "postcss public/css/tailwind.css -o public/css/styles.css",
    "watch-css": "postcss public/css/tailwind.css -o public/css/styles.css --watch",
    "dev-electron": "nodemon --watch views --watch routes --watch app --watch db --exec \"electron .\"",
    "dev": "concurrently \"npm run watch-css\" \"npm run dev-electron\"",
    "build": "npx electron-builder",
    "create-db": "node db/createDB.js"
  },
  "keywords": [],
  "author": "I-As.Dev",
  "license": "MIT",
  "description": "Aplikasi desktop yang dirancang untuk kebutuhan backoffice dan manajemen data berbasis NodeJS.",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7"
  },
  "build": {
    "appId": "com.example.myapp",
    "files": [
      "app/**/*",
      "assets/**/*",
      "db/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "public/**/*",
      "routes/**/*",
      "views/**/*",
      "setup.js",
      "db/database.db",
      "package.json"
    ],
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "sql.js": "^1.11.0"
  }
}
